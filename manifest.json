{
	"manifest_version":2,

	"name":"Idiot Check",
	"description":"Highlights whether you're working on local, dev, or production.",
	"version":"0.1.0",
	"background": { "scripts":[ "common/utils.js", "background/background.js" ] },
	"options_page": "options/options.html",
	"page_action":
	{
		"default_icon": "icons/icon-bw-19.png",
		"default_title":"There's a 'G' in this URL!"
	},
	"permissions":
	[
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"web_accessible_resources":
	[
		"images/development.png",
		"images/local.png",
		"images/production.png"
	]
}